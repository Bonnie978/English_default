{
  "version": 2,
  "builds": [
    {
      "src": "vocabulary-app/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/words/stats",
      "dest": "/api/words/stats.js"
    },
    {
      "src": "/(.*)",
      "dest": "/vocabulary-app/build/$1"
    }
  ]
} 