{
  "version": 2,
  "buildCommand": "cd vocabulary-app && npm run build",
  "outputDirectory": "vocabulary-app/build",
  "installCommand": "npm install && cd vocabulary-app && npm install && cd ../vocabulary-api && npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/vocabulary-api/api/index.ts"
    },
    {
      "src": "/static/(.*)",
      "dest": "/vocabulary-app/build/static/$1"
    },
    {
      "src": "/(favicon\\.ico|logo192\\.png|logo512\\.png|manifest\\.json|robots\\.txt)",
      "dest": "/vocabulary-app/build/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/vocabulary-app/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/vocabulary-app/build/index.html"
    }
  ],
  "functions": {
    "vocabulary-api/api/index.ts": {
      "runtime": "nodejs18.x"
    }
  }
} 