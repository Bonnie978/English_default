{
  "version": 2,
  "builds": [
    {
      "src": "vocabulary-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "vocabulary-api/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/vocabulary-api/src/index.ts"
    },
    {
      "src": "/static/(.*)",
      "dest": "/vocabulary-app/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/vocabulary-app/manifest.json"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/vocabulary-app/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/vocabulary-app/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 