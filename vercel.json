{
  "version": 2,
  "builds": [
    {
      "src": "vocabulary-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "vocabulary-api/api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/vocabulary-api/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/vocabulary-app/build/$1"
    }
  ],
  "installCommand": "cd vocabulary-app && npm install && cd ../vocabulary-api && npm install",
  "buildCommand": "cd vocabulary-app && npm run build && cd ../vocabulary-api && npm run build"
} 