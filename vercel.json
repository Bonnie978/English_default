{
  "version": 2,
  "builds": [
    {
      "src": "vocabulary-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/words/stats",
      "dest": "/api/words/stats.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/vocabulary-app/build/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/vocabulary-app/build/manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "/vocabulary-app/build/favicon.ico"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|json))",
      "dest": "/vocabulary-app/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/vocabulary-app/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 