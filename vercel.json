{
  "version": 2,
  "builds": [
    {
      "src": "vocabulary-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "vocabulary-api/api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/vocabulary-api/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/vocabulary-app/build/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/vocabulary-api/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/vocabulary-app/build/index.html"
    }
  ],
  "functions": {
    "vocabulary-api/api/index.ts": {
      "runtime": "nodejs18.x"
    }
  }
} 