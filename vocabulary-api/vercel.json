{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "functions": {
    "api/simple.ts": {
      "maxDuration": 10
    },
    "api/test-supabase.ts": {
      "maxDuration": 15
    },
    "api/words-stats-basic.ts": {
      "maxDuration": 15
    },
    "api/words-daily.js": {
      "maxDuration": 15
    },
    "api/words-stats.js": {
      "maxDuration": 15
    },
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/simple",
      "destination": "/api/simple.ts"
    },
    {
      "source": "/api/test-supabase",
      "destination": "/api/test-supabase.ts"
    },
    {
      "source": "/api/words-stats-basic",
      "destination": "/api/words-stats-basic.ts"
    },
    {
      "source": "/api/words-daily",
      "destination": "/api/words-daily.js"
    },
    {
      "source": "/api/words-stats",
      "destination": "/api/words-stats.js"
    }
  ]
} 